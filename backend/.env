# Backend environment variables (development defaults)
# Copy this file to .env and change secrets for production

# JWT / session
JWT_SECRET=dev-secret-change-me
JWT_REFRESH_SECRET=dev-refresh-secret-change-me
SECRET_KEY=a-very-secret-key-that-you-should-change

# Token expiry
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database - this matches docker-compose defaults (container DNS: db)
DATABASE_URL=postgresql://user:password@db:5432/mydatabase

# Frontend / OAuth
FRONTEND_URL=http://localhost:3000
OAUTH_REDIRECT_BASE=http://localhost:8000

# OAuth client placeholders (fill if you enable OAuth)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
LINKEDIN_CLIENT_ID=your-linkedin-client-id-here
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-here

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Path to the questions CSV inside the container (docker-compose sets a mount)
PM_QUESTIONS_CSV=/backend/PM_Questions_FINAL_12x2000_Formatted_Final_HUMANIZED.csv

# Optional OpenAI key for AI features
OPENAI_API_KEY=

# LLM settings (the compose file sets defaults too)
LLM_API_URL=http://pmbot-llm-stub:5000
LLM_MODEL=qwen2:7b-instruct
LLM_FORCE=1
